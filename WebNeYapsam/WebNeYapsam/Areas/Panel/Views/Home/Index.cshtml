@model WebNeYapsam.Areas.Panel.Controllers.PanelHomeViewModel
<div class="content animate-panel">
    <div class="row">
        <div class="col-lg-12 text-center m-t-md">
            <h2>
                NeYapsam Admin Paneline Hoşgeldiniz
            </h2>

            <p>
                Special <strong>Admin Theme</strong> for small, medium and large webapp with very clean and
                aesthetic style and feel.
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="hpanel">
                <div class="panel-body text-center h-200">
                    <i class="pe-7s-graph1 fa-4x"></i>

                    <h1 class="m-xs">@Model.UserCount</h1>

                    <h3 class="font-extra-bold no-margins text-success">
                        Kullanıcı Sayısı
                    </h3>
                    <small>Sistemde kayıtlı toplam kullanıcı sayısı.</small>
                </div>
                <div class="panel-footer">

                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="hpanel stats">
                <div class="panel-body h-200">
                    <div class="stats-title pull-left">
                        <h4>Toplam</h4>
                    </div>
                    <div class="stats-icon pull-right">
                        <i class="pe-7s-share fa-4x"></i>
                    </div>
                    <div class="m-t-xl">
                        <h3 class="m-b-xs">@Model.DataCount</h3>
                        <span class="font-bold no-margins">
                            İçerik
                        </span>

                        <div class="row" style="margin-top:15px;">
                            <div class="col-xs-6">
                                <small class="stats-label">Başlık</small>
                                <h4>@Model.TitleCount</h4>
                            </div>

                            <div class="col-xs-6">
                                <small class="stats-label">Tavsiye</small>
                                <h4>@Model.AdviseCount</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="hpanel stats">
                <div class="panel-body h-200">
                    <div class="stats-title pull-left">
                        <h4>Şikayetler</h4>
                    </div>
                    <div class="stats-icon pull-right">
                        <i class="pe-7s-monitor fa-4x"></i>
                    </div>
                    <div class="m-t-xl">
                        <h1 class="text-success">@Model.ComplaintCount+</h1>
                        <span class="font-bold no-margins">
                            Şikayet
                        </span>
                        <br />
                        <small>
                            Kullanıcılar tarafından başlık ve tavsiyelere yapılan toplam şikayet sayısı.
                        </small>
                    </div>
                </div>
                <div class="panel-footer">
                </div>
            </div>
        </div>
    </div>
</div>

<footer class="footer">
    <span class="pull-right">
        NeYapsam v1.0
    </span>
    NeYapsam @DateTime.Now.Year
</footer>